<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:cardView="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_10sdp"
                                    cardView:cardBackgroundColor="@color/messageBack"
>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"

                  android:gravity="center">
        <ImageView android:layout_width="@dimen/_80sdp" android:layout_height="@dimen/_80sdp"
                   android:id="@+id/imagIcon"

        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/_5sdp"
                  android:textSize="@dimen/_14sdp"
                  android:layout_toRightOf="@+id/imgIcon"
                  android:layout_toLeftOf="@+id/toggleOrganizatn"
                  android:layout_weight="1"
                  android:text="Exa Tech LL"
                  android:textColor="@android:color/black"/>
        <android.support.v7.widget.SwitchCompat android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:id="@+id/toggleOrganizatn"
                                                android:layout_alignParentRight="true"
                                                android:layout_weight="0.3"
        />
    </LinearLayout>
</android.support.v7.widget.CardView>