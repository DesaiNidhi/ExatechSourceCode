<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        cardview:cardUseCompatPadding="true"
        cardview:cardCornerRadius="@dimen/_2sdp"
        android:id="@+id/cardView">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:layout_toRightOf="@+id/view"
                      android:padding="@dimen/_8sdp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:orientation="horizontal">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/orderId"
                          android:textColor="@android:color/black"
                          android:id="@+id/lblOrderId"
                          android:textSize="@dimen/_14sdp"
                          android:layout_centerVertical="true"
                />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/orderId"
                          android:layout_marginLeft="@dimen/_5sdp"
                          android:layout_toRightOf="@+id/lblOrderId"
                          android:text="2233444"
                          android:textColor="@android:color/black"
                          android:textSize="@dimen/_14sdp"
                          android:layout_centerVertical="true"/>


            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:layout_marginTop="@dimen/_5sdp"
                  android:background="@color/light_grey"
            ></View>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/_14sdp"
                      android:text="Occupancy Inspection"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Gaurav Gupta"
                          android:textSize="@dimen/_14sdp"
                          android:textColor="@android:color/black"/>
                <ImageView android:layout_width="@dimen/_20sdp" android:layout_height="@dimen/_20sdp"
                           android:layout_alignParentEnd="true"
                           android:layout_alignParentRight="true"
                           android:src="@drawable/img_pdf"
                           android:tint="@color/colorPrimary"
                           android:layout_marginRight="@dimen/_5sdp"
                           android:id="@+id/imgIcon"/>
            </RelativeLayout>
<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
android:orientation="horizontal"
android:weightSum="2">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="233 Main St "
              android:layout_weight="1.4"
              android:textColor="@android:color/black"
              android:textSize="@dimen/_14sdp"/>
    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              android:text="04 Apr 2019"
             android:layout_weight="0.6"
             />
</LinearLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>