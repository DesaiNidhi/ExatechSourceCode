<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        cardview:cardUseCompatPadding="true"
        cardview:cardCornerRadius="@dimen/_2sdp"
        android:id="@+id/cardView">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"


    >
        <View android:layout_width="@dimen/_2sdp"
              android:layout_height="fill_parent"
              android:background="@color/colorPrimary"
              android:id="@+id/view"></View>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:layout_toRightOf="@+id/view"
                      android:padding="@dimen/_8sdp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:orientation="horizontal">
                <ImageView android:layout_width="@dimen/_25sdp" android:layout_height="@dimen/_25sdp"
                           android:src="@drawable/img_unselect"
                           android:tint="@color/colorPrimary"
                           android:layout_marginRight="@dimen/_10sdp"
                           android:id="@+id/imgCheckbox"
                           android:visibility="gone"
                           android:tag="0"

                />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/orderId"
                          android:textColor="@android:color/black"
                          android:id="@+id/lblOrderId"
                          android:textSize="@dimen/_12sdp"
                          android:layout_toRightOf="@+id/imgCheckbox"
                          android:layout_centerVertical="true"
                />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/orderId"
                          android:layout_marginLeft="@dimen/_5sdp"
                          android:layout_toRightOf="@+id/lblOrderId"
                          android:text="2233444"
                          android:textColor="@android:color/black"
                          android:textSize="@dimen/_13sdp"
                          android:layout_centerVertical="true"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_alignParentRight="true"
                          android:layout_alignParentEnd="true"
                          android:text="ccCoeew"
                          android:layout_marginRight="@dimen/_5sdp"
                          android:textSize="@dimen/_14sdp"
                          android:layout_centerVertical="true"
                          android:id="@+id/txtOrderCode"/>
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:layout_marginTop="@dimen/_5sdp"
                  android:background="@color/light_grey"
            ></View>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/_14sdp"
                      android:text="Occupancy Inspection"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Gaurav Gupta"
                          android:textSize="@dimen/_14sdp"
                          android:textColor="@android:color/black"/>
                <ImageView android:layout_width="@dimen/_20sdp" android:layout_height="@dimen/_20sdp"
                           android:layout_alignParentEnd="true"
                           android:layout_alignParentRight="true"
                           android:src="@drawable/img_navigation_right"
                           android:tint="@color/colorPrimary"
                           android:layout_marginRight="@dimen/_5sdp"
                           android:id="@+id/imgIcon"/>
            </RelativeLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="233 Main St"
                      android:textColor="@android:color/black"
                      android:textSize="@dimen/_14sdp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>