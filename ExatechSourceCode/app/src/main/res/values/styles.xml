<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="menuTextStyle">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:listDivider">@android:color/white</item>
        <item name="android:verticalSpacing">@dimen/_2sdp</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="txtLogin">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="theme_radio_btn">
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
    </style>
    <style name="theme_btn_keyboard">
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="theme_product_detail_title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <style name="theme_product_detail_value">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>
</resources>
